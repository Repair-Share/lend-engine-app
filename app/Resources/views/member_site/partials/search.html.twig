{% trans_default_domain 'member_site' %}

<div id="search-box">
    <form method="get" role="search" action="{{ path('public_products') }}">
        <div class="input-group">
            <input type="text" name="search" id="search-text" class="form-control" value="{{ app.request.get('search') }}"
                   placeholder="{% trans %}public_misc.search_items{% endtrans %} ...">
            <span class="input-group-btn">
                <button type="submit" id="search-button" class="btn btn-success"><i class="fas fa-search"></i></button>
            </span>
        </div>
    </form>
</div>